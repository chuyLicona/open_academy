<odoo>
    <data>
         <record model="ir.actions.act_window" id="action_list_courses">
             <field name="name">Courses</field>
            <field name="res_model">open_academy.course</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="open_academy.list">
             <field name="name">lista de cursos</field>
              <field name="model">open_academy.course</field>
              <field name="arch" type="xml">
                   <form>
                       <field name="title"/>
                         <field name="description"/>
                    </form>
             </field>
        </record>      

        <record id="open_academy.course_view_search" model="ir.ui.view">
            <field name="name">open_academy.course.view.search</field>
            <field name="model">open_academy.course</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    <field name="title"/>
                    <field name="description"/>
                    
                    <filter name="my_courses" string="Mis cursos" domain="[('title', '=', description)]"/>
                    <group string="Agrupar por">
                        <filter name="title" string="titulo" context="{'group_by': 'title'}"/>
                    </group>
                    
                </search>
            </field>
        </record>  

        <menuitem id="menu_open_academy_main" name="Open Academy" sequence="10"/>
        <menuitem id="menu_courses" parent="menu_open_academy_main" name="Courses" sequence="10" action="action_list_courses"/>

        

    </data>
</odoo>    