<odoo>
    <data>
         <record model="ir.actions.act_window" id="action_list_sessions">
             <field name="name">Sessions</field>
            <field name="res_model">open_academy.session</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="open_academy.sessions">
             <field name="name">lista de sesiones</field>
              <field name="model">open_academy.session</field>
              <field name="arch" type="xml">
                   <form>
                       <field name="name"/>
                       <field name="startD"/>
                       <field name="duration"/>
                       <field name="noSeats"/>
                    </form>
             </field>
        </record>      

        <record id="open_academy.sessions_view_search" model="ir.ui.view">
            <field name="name">open_academy.session.view.search</field>
            <field name="model">open_academy.session</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="startD"/>
                    <field name="duration"/>
                    <field name="noSeats"/>
                    
                    <filter name="my_sessions" string="Mis Sessiones" domain="[('name', '=', startD)]"/>
                    <group string="Agrupar por">
                        <filter name="name" string="Nombre" context="{'group_by': 'name'}"/>
                    </group>
                    
                </search>
            </field>
        </record>  

        <menuitem id="menu_open_academy_main" name="Open Academy" sequence="10"/>
        <menuitem id="menu_session" parent="menu_open_academy_main" name="Sessions" sequence="10" action="action_list_sessions"/>

        

    </data>
</odoo>    